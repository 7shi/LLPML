<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.3.20070815" subsystem="WINDOWS_GUI">

<extern name="MessageBox" alias="MessageBoxW" module="user32.dll" type="std" />
<extern name="wsprintf" alias="wsprintfW" module="user32.dll" />

<loop name="i" count="3">
	<ptr-define name="dest"><char count="32" /></ptr-define>
	<call name="wsprintf">
		<ptr name="dest" />
		<string>こんにちは、世界！(%d)</string>
		<var-int name="i" />
	</call>
	<call name="MessageBox">
		<int>0</int>
		<ptr name="dest" />
		<string>だいあろぐ</string>
		<int>0</int>
	</call>
</loop>

</llpml>
