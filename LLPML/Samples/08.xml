<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.5.20070829">

<!-- function returns value -->

<include src="stdio.xml" />

<var-declare name="a">3</var-declare>
<var-declare name="b">4</var-declare>

<call name="printfln">
	<string>%d + %d = %d</string>
	<var name="a" />
	<var name="b" />
	<call name="add">
		<var name="a" />
		<var name="b" />
	</call>
</call>

<call name="finish" />

<function name="add">
	<arg name="a" />
	<arg name="b" />
	<return>
		<add>
			<var name="a" />
			<var name="b" />
		</add>
	</return>
</function>

</llpml>
