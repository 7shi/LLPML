<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.3.20070815">

<!-- function returns value -->

<include src="stdio.xml" />

<var-int-define name="a">3</var-int-define>
<var-int-define name="b">4</var-int-define>

<call name="printfln">
	<string>%d + %d = %d</string>
	<var-int name="a" />
	<var-int name="b" />
	<call name="add">
		<var-int name="a" />
		<var-int name="b" />
	</call>
</call>

<call name="finish" />

<function name="add">
	<arg-int name="a" />
	<arg-int name="b" />
	<var-int-add name="a"><var-int name="b" /></var-int-add>
	<return><var-int name="a" /></return>
</function>

</llpml>
