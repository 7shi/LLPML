<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.5.20070829">

<include src="stdio.xml" />

<var-declare name="result">0</var-declare>

<for>
	<init>
		<var-declare name="i">1</var-declare>
	</init>
	<cond>
		<less-equal>
			<var name="i" />
			<int>10000</int>
		</less-equal>
	</cond>
	<loop>
		<inc>
			<var name="i" />
		</inc>
	</loop>
	<block>
		<var-add>
			<var name="result" />
			<var name="i" />
		</var-add>
	</block>
</for>

<call name="printfln">
	<string>1 + 2 + ... + 10000 = %d</string>
	<var name="result" />
</call>

<call name="finish" />

</llpml>
