<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.16.20080410">

<title>カリー化</title>

<include src="finish.xml" />
<include src="delegate.xml" />

<?llp
var mul = \(a, b) => a * b;
var mul2 = \a => mul(2, a);
printfln("mul2(3) = %d", mul2(3));

// a => b => a * b
var curried = \a => new_Delegate(a, \(a, b) => a * b);

Delegate curried3;
curried3.Delegate = curried(3);
printfln("curried3(2) = %d", curried3(2));
?>

</llpml>
