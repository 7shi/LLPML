<llpml version="0.14.20080329">

<title>カリー化</title>

<include src="finish.xml" />
<include src="delegate.xml" />

<?llp
var mul = function(a, b) { return a * b; };
var mul2 = function(a) { return mul(a, 2); };
printfln("mul2(3) = %d", mul2(3));

// a => b => a * b
var curried = function(a)
{
  return new_Delegate(a, function(a, b)
  {
    return a * b;
  });
};
Delegate curried3;
curried3.Delegate = curried(3);
printfln("curried3(2) = %d", curried3(2));
?>

</llpml>
