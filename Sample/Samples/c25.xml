<title>ヒープ</title>

<include src="finish.xml" />
<include src="malloc.xml" />

<?llp
struct Test
{
  var a = 1;
  
  function Show()
  {
    printfln("%p [%s] a = %d", this, __FUNCTION__, a);
  }
}

Test test1;
printfln("test1 = %p", test1);
test1.Show();

var test2 = new Test;
printfln("test2 = %p", test2);
test2.Show();
test2.a = 2;
test2.Show();
delete test2;
?>

</llpml>
