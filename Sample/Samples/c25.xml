<include src="malloc.xml" />

<?llp
struct Test
{
  var a = 1;
  
  function Show()
  {
    printfln("%p [%s] a = %d", this, __FUNCTION__, a);
  }
}

function Test_new()
{
  var this = (Test)malloc(sizeof(Test));
  this.izer(); // initializer
  this.ctor(); // constructor
  return this;
}

function Test_delete(this : Test)
{
  this.dtor();
  free(this);
}

Test test1;
printfln("test1 = %p", test1);
test1.Show();

var test2 = (Test)Test_new();
printfln("test2 = %p", test2);
test2.Show();
test2.a = 2;
test2.Show();
Test_delete(test2);
?>

