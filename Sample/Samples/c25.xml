<include src="malloc.xml" />

<?llp
struct Test
{
  var a = 1;
  
  function Show()
  {
    printfln("%p [%s] a = %d", this, __FUNCTION__, a);
  }
}

function new_Test()
{
  var this = (Test)malloc(sizeof(Test));
  this.izer(); // initializer
  this.ctor(); // constructor
  return this;
}

function delete_Test(this : Test)
{
  this.dtor();
  free(this);
}

Test test1;
printfln("test1 = %p", test1);
test1.Show();

var test2 = new_Test();
printfln("test2 = %p", test2);
test2.Show();
test2.a = 2;
test2.Show();
delete_Test(test2);
?>

