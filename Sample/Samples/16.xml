<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.9.20071021">

<!-- flow -->

<include src="finish.xml" />

<for>
	<init>
		<var-declare name="i">0</var-declare>
	</init>
	<cond>5 > i</cond>
	<loop>i++;</loop>
	<block>
		<if>
			<cond>i == 2</cond>
			<block>
				printfln("skip...");
				<continue />
			</block>
		</if>
		printfln("[for] i = %d", i);
	</block>
</for>

<var-declare name="i">0</var-declare>
<do>
	<block>
		printf("[do] i = %d ", i);
		<if>
			<cond>i == 0</cond>
			<block>
				printfln("(zero)");
			</block>
			<cond>i == 1</cond>
			<block>
				printfln("(one)");
			</block>
			<cond>i == 2</cond>
			<block>
				printfln("(two)");
			</block>
			<!-- else -->
			<block>
				printfln("(...)");
			</block>
		</if>
		i++;
	</block>
	<cond>5 > i</cond>
</do>

<while>
	<cond>i > 0</cond>
	<block>
		printf("[while] i = %d ", i);
		<switch>
			<expr>i</expr>
			<case>5, 4</case>
			<block>
				printfln("(4 or 5)");
				<break />
			</block>
			<case>3</case>
			<block>
				printfln("(3)");
				<break />
			</block>
			<!-- default -->
			<block>
				printfln("(etc)");
				<break />
			</block>
		</switch>
		i--;
	</block>
</while>

<for>
	<init>
		<var-declare name="i">0</var-declare>
	</init>
	<loop>i++;</loop>
	<block>
		printfln("[for] i = %d", i);
		<if>
			<cond>i == 2</cond>
			<block>
				<break />
			</block>
		</if>
	</block>
</for>

</llpml>
