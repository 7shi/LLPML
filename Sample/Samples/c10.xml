<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.11.20080314">

<title>計算</title>

<include src="finish.xml" />

<?llp
var a = 4;

printfln("a = %d", a);
printfln("1 + 2 + a - 5: %d", 1 + 2 + a - 5);

printfln("++a: %d", ++a);
printfln("a = %d", a);

printfln("a++: %d", a++);
printfln("a = %d", a);

printfln("--a: %d", --a);
printfln("a = %d", a);

printfln("a--: %d", a--);
printfln("a = %d", a);

printfln("a += 2: %d", a += 2);
printfln("a -= 2: %d", a -= 2);
printfln("a *= 2: %d", a *= 2);
printfln("a /= 2: %d", a /= 2);
printfln("a |= 8: %d", a |= 8);
printfln("a &= 7: %d", a &= 7);
printfln("a <<= 5: %d", a <<= 5);
printfln("a >>= 5: %d", a >>= 5);
printfln("a <<= a: %d", a <<= a);
printfln("a = %d", a);
?>

</llpml>
