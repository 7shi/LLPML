<include src="mmx.xml" />

<?llp
if (!__check_mmx())
{
  printfln("MMXをサポートしていません。");
  return 0;
}

int x0 = 0x04030201;
printfln("x0 = %08x", x0);

printfln("unpack: x0 => x1");
__movd(__mm0, x0);
__movd(__mm1, 0);
__punpcklbw(__mm0, __mm1);
__m64w x1;
x1.__movq(__mm0);
x1.Show("x1");

__m64w x2 = { 2, 2, 2, 2 };
x2.Show("x2");

printfln("x3 = x1 * x2");
__pmullw(__mm0, x2);
__m64w x3;
x3.__movq(__mm0);
x3.Show("x3");

__m64w x4 = { 0xfe, 0x1fc, 0x2fa, 0x3f8 };
x4.Show("x4");

printfln("x5 = x3 + x4");
__paddw(__mm0, x4);
__m64w x5;
x5.__movq(__mm0);
x5.Show("x5");

printfln("x6 = x5 >> 4");
__psrlw(__mm0, 4);
__m64w x6;
x6.__movq(__mm0);
x6.Show("x6");

printfln("pack: x6 => x7");
__packuswb(__mm0, __mm1);
int x7;
x7.__movd(__mm0);
printfln("x7 = %08x", x7);

__emms();
?>

