<?llp
struct Test
{
  var Text;
  
  function Show()
  {
    printfln(Text);
  }
}

Test a, b;
a.Text = "a";
b.Text = "b";

a.Show();
b.Show();

Delegate delg_a, delg_b;
delg_a.Bind1(a, Test.Show);
delg_b.Bind1(b, Test.Show);

delg_a();
delg_b();
?>

