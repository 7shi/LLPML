<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.16.20080410">

<title>ラムダ式</title>

<include src="finish.xml" />

<?llp
// 間接呼び出し
var f = \(a, b) => a - b;
printfln("f(5, 3) = %d", f(5, 3));

// 直接呼び出し
printfln(
  "(\\(a, b) => a - b)(5, 3) = %d",
   (\ (a, b) => a - b)(5, 3));

// 引数1個
var inc = \a => a + 1;
printfln("inc(3) = %d", inc(3));

// 引数なし
wrapper(\ => printfln("anonymous!"));

function wrapper(ptr)
{
  ptr();
}
?>

</llpml>
