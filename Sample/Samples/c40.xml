<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.17.20080421">

<title>継続渡し</title>

<include src="finish.xml" />
<include src="jit.xml" />

<?llp
function cont(a)
{
  printfln("a: %d", a);
  return delegate(a, \a =>
  {
    printfln("a += 2: %d", a += 2);
    return delegate(a, \a =>
    {
      printfln("a += 3: %d", a += 3);
      return null;
    });
  });
};

var delg = cont(5);
while (delg != null)
  delg = delg();
?>

</llpml>
