<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.18.20080421">

<title>継続渡し</title>

<include src="finish.xml" />
<include src="jit.xml" />

<?llp
function cont(a)
{
  printfln("a: %d", a);
  return function
  {
    printfln("a += 2: %d", a += 2);
    return function
    {
      printfln("a += 3: %d", a += 3);
      return null;
    };
  };
};

var delg = cont(5);
while (delg != null)
  delg = delg();
?>

</llpml>
