<?xml version="1.0" encoding="utf-8" ?>
<llpml version="1.0">

<title>構造体の型</title>

<include src="finish.xml" />

<?llp
struct Point { var x, y; }

Point p = { 3, 7 };
vprintfln("p = (%d, %d)", p);

printfln("pp = p");
//var pp : Point = p;
var pp = p; // 型推論
vprintfln("pp = (%d, %d)", pp);

printfln("pp->y -= 5");
pp.y -= 5;
vprintfln("p = (%d, %d)", p);

printfln("p.x += 5");
p.x += 5;
vprintfln("pp = (%d, %d)", pp);

printfln("offset(pp, 3, 4)");
offset(pp, 3, 4);
vprintfln("pp = (%d, %d)", pp);

vprintfln("p = (%d, %d)", p);

function offset(p : Point, x, y)
{
  p.x += x;
  p.y += y;
}
?>

</llpml>
