<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.6.20070830">

<!-- method (struct member function) -->

<include src="stdio.xml" />

<struct-define name="Point">
	<member name="x" />
	<member name="y" />
	
	<method name="Show">
		<call name="vprintfln">
			<string>Show: (%d, %d)</string>
			<this />
		</call>
	</method>
</struct-define>

<struct-declare name="p" type="Point">
	<int>2</int>
	<int>3</int>
</struct-declare>

<var-declare name="pp" type="Point">
	<ptr name="p" />
</var-declare>

<!-- direct (not recommended) -->
<call name="Point::Show">
	<ptr name="p" />
</call>

<!-- by instance -->
<invoke name="Show">
	<ptr name="p" />
</invoke>

<!-- by pointer -->
<invoke name="Show">
	<var name="pp" />
</invoke>

<call name="finish" />

</llpml>
