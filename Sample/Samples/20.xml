<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.9.20071021">

<!-- struct member function -->

<include src="finish.xml" />

<struct-define name="Point">
	<var-declare name="x" />
	<var-declare name="y" />
	
	<function name="Show">
		printfln("[%s] %d, %d", __FUNCTION__, x, y);
	</function>
</struct-define>

<struct-declare name="p" type="Point">
	2, 3
</struct-declare>

<var-declare name="pp" type="Point">
	p
</var-declare>

<!-- by instance -->
p.Show();

<!-- by pointer -->
pp.Show();

</llpml>
