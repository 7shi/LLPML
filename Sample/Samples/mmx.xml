<?xml version="1.0" encoding="utf-8" ?>
<llpml version="1.0">

<!-- MMX support -->

<include src="cpuid.xml" />

<?llp
function __check_mmx()
{
  CPUID_Result result;
  result.__cpuid(1);
  return (result.edx & 0x00800000) != 0;
}

struct __m64b
{
  byte _0, _1, _2, _3, _4, _5, _6, _7;
  
  function Show(name)
  {
    var p : byte* = this;
    printf("%s = { ", name);
    for (int i = 0; i < 8; i++)
    {
      if (i > 0) printf(", ");
      printf("%02x", p[i]);
    }
    printfln(" }");
  }
}

struct __m64w
{
  short _0, _1, _2, _3;
  
  function Show(name)
  {
    printfln("%s = { %04x, %04x, %04x, %04x }",
      name, _0, _1, _2, _3);
  }
}

struct __m64d
{
  int _0, _1;
  
  function Show(name)
  {
    printfln("%s = { %08x, %08x }", name, _0, _1);
  }
}
?>

</llpml>
