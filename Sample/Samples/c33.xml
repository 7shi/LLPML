<?xml version="1.0" encoding="utf-8" ?>
<llpml version="1.0">

<title>無名関数</title>

<include src="finish.xml" />

<?llp
// 間接呼び出し
var f = function(a, b) { return a - b; };
printfln("f(5, 3) = %d", f(5, 3));

// 直接呼び出し
printfln(
  "function(a, b) { return a - b; }(5, 3) = %d",
   function(a, b) { return a - b; }(5, 3));

wrapper(function
{
  printfln("anonymous!");
});

function wrapper(ptr)
{
  ptr();
}
?>

</llpml>
