<?xml version="1.0" encoding="utf-8" ?>
<llpml version="0.11.20080314">

<title>制御構造</title>

<include src="finish.xml" />

<?llp
for (var i = 0; 5 > i; i++)
{
  if (i == 2)
  {
    printfln("skip...");
    continue;
  }
  printfln("[for] i = %d", i);
}

var i = 0;
do
{
  printf("[do] i = %d ", i);
  if (i == 0)
    printfln("(zero)");
  else if (i == 1)
    printfln("(one)");
  else if (i == 2)
    printfln("(two)");
  else
    printfln("(...)");
  i++;
} while (5 > i);

while (i > 0)
{
  printf("[while] i = %d ", i);
  switch (i)
  {
    case 5:
    case 4:
      printfln("(4 or 5)");
      break;
    case 3:
      printfln("(3)");
      break;
    default:
      printfln("(etc)");
      break;
  }
  i--;
}

for (var i = 0; ; i++)
{
  printfln("[for] i = %d", i);
  if (i == 2) break;
}
?>

</llpml>
